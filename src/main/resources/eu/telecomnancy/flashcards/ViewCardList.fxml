<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.telecomnancy.flashcards.controller.ControllerCardList">
    <MenuBar prefHeight="27.0" prefWidth="800.0" VBox.vgrow="NEVER">
        <menus>
            <Menu mnemonicParsing="false" text="Edition">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#switchToDeckList" text="Voir toutes les piles" />
               <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#quit" text="Quitter l'application" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Configuration">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#switchToParam" text="Paramètres" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Statistiques">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#switchToStats" text="Dashboard" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <BorderPane layoutY="26.0" prefHeight="774.0" prefWidth="800.0">
        <center>
            <ListView fx:id="content" prefHeight="200.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
        </center>
      <left>
         <Pane prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
      </left>
      <right>
         <Pane prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
      </right>
      <bottom>
         <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
               <ImageView fx:id="add" fitHeight="60.0" fitWidth="60.0" layoutX="155.0" layoutY="61.0" onMouseClicked="#switchToNewCard" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../img/add.png" />
                  </image>
               </ImageView>
               <ImageView fx:id="stack" fitHeight="70.0" fitWidth="70.0" layoutX="282.0" layoutY="56.0" onMouseClicked="#addCardToDeck" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../img/stack.png" />
                  </image>
               </ImageView>
               <ImageView fx:id="modify" fitHeight="60.0" fitWidth="60.0" layoutX="441.0" layoutY="61.0" onMouseClicked="#switchToModCard" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../img/modify.png" />
                  </image>
               </ImageView>
               <ImageView fx:id="trash" fitHeight="60.0" fitWidth="60.0" layoutX="581.0" layoutY="61.0" onMouseClicked="#deleteCard" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../img/supp.png" />
                  </image>
               </ImageView>
            </children>
         </Pane>
      </bottom>
      <top>
          <Pane prefHeight="120.0" prefWidth="800.0" BorderPane.alignment="CENTER">
              <children>
                  <Label layoutX="300.0" text="Mes cartes">
                      <font>
                          <Font name="Bookman Old Style Bold" size="36.0" />
                      </font>
                  </Label>
                  <Label layoutX="192.0" layoutY="84.0" text="Questions">
                      <font>
                          <Font size="22.0" />
                      </font>
                  </Label>
                  <Label layoutX="497.0" layoutY="84.0" text="Réponses">
                      <font>
                          <Font size="22.0" />
                      </font>
                  </Label>
               <ImageView fx:id="home" fitHeight="60.0" fitWidth="60.0" layoutX="40.0" layoutY="31.0" onMouseClicked="#switchToDeckList" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../img/house.png" />
                  </image>
               </ImageView>
               <TextField fx:id="searchBar" layoutX="206.0" layoutY="46.0" prefHeight="25.0" prefWidth="389.0" promptText="Question de la carte rechercher...">
                  <font>
                     <Font size="14.0" />
                  </font>
               </TextField>
              </children>
          </Pane>
      </top>
    </BorderPane>

</AnchorPane>
